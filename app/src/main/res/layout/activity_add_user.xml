<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddUserActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/navi_logo"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/colorDivision"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진과 닉네임을 설정하세요."
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/addUser_iv_addPhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_add_a_photo"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위 버튼을 눌러 사진을 등록하세요."
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="아이디 : "
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/addUser_tv_UserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="roswkzm@naver.com"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="닉네임 : "
            android:textColor="@color/black"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/addUser_et_userNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="원하는 닉네임을 입력하세요."
            android:layout_marginLeft="40dp"/>
    </LinearLayout>


    <Button
        android:id="@+id/addUser_btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사진 업로드"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/purple_200"/>

</LinearLayout>