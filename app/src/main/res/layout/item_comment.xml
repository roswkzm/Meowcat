<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/commentItem_iv_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:src="@drawable/logo_picture" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:backgroundTint="#9FE0E0E0"
        android:background="@drawable/round_backgroud_border_black">

        <TextView
            android:id="@+id/commentItem_tv_userNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="유저 닉네임"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/commentItem_tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="3dp"
            android:text="나는 오늘 집가서 치킨이 먹고싶다. 피자도 먹고싶다"/>


    </LinearLayout>

</LinearLayout>